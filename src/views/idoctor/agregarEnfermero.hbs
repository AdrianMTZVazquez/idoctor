<div class="container container-outside">
    <div class="row">
        <div class="six columns">
            <p class="container-outside-style">
                <i class="fa fa-user-plus" style="color: #cd5070;"></i>&nbsp;&nbsp;Enfermeros / 
                <a href="/idoctor/ver-enfermeros">
                    <i class="fa fa-list"></i>&nbsp;&nbsp;Ver Lista
                </a>
                &nbsp;/&nbsp;
                <i class="fa fa-file-text"></i>&nbsp;&nbsp;Formulario de Enfermeros
            </p>
        </div>
    </div>
</div>
<div class="content-box">
    <div class="container container-margin">
        <form action="/idoctor/agregar-enfermero" method="POST" class="form-margin">
            <h3>Agregar Enfermero</h3>
            <div class="row">
                <div class="six columns">
                    <label>Nombre:</label>
                    <input class="u-full-width" type="text" placeholder="Nombre Apellidos" name="nombre_enf" autofocus required>
                </div>
                <div class="six columns">
                    <label>Alias:</label>
                    <input class="u-full-width" type="text" placeholder="Enf. Perez" name="alias_enf" required>
                </div>
            </div>
            <div class="row">
                <div class="six columns">
                    <label>Password:</label>
                    <input class="u-full-width" type="password" name="password_enf" required>
                </div>

                <div class="six columns">
                    <label>&nbsp;</label>
                    <input class="button-primary u-full-width" type="submit" value="Agregar Enfermero">
                </div>
            </div>
        </form>
    </div>
</div>