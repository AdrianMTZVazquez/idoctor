<div class="container container-outside">
    <div class="row">
        <div class="six columns">
            <p class="container-outside-style">
                <i class="fa fa-user-md" style="color: #cd5070;"></i>&nbsp;&nbsp;Doctores / 
                <a href="/idoctor/ver-doctores">
                    <i class="fa fa-list"></i>&nbsp;&nbsp;Ver Lista
                </a>
                &nbsp;/&nbsp;
                <i class="fa fa-file-text"></i>&nbsp;&nbsp;Formulario de Doctores
            </p>
        </div>
    </div>
</div>
<div class="content-box">
    <div class="container container-margin">
        <form action="/idoctor/agregar-doctor" method="POST" class="form-margin">
            <h3>Agregar Doctor</h3>
            <div class="row">
                <div class="six columns">
                    <label>Nombre:</label>
                    <input class="u-full-width" type="text" placeholder="Nombre Apellidos" name="nombre_dr" autofocus>
                </div>
                <div class="six columns">
                    <label>Alias:</label>
                    <input class="u-full-width" type="text" placeholder="Dr Perez" name="alias_dr">
                </div>
            </div>
            <div class="row">
                <div class="six columns">
                    <label>Password:</label>
                    <input class="u-full-width" type="password" name="password_dr">
                </div>
                <div class="six columns">
                    <label>Consultorio:&nbsp;</label>
                    {{#if consltLista}}
                        <select class="u-full-width" name="id_conslt">
                            <option></option>
                        {{#each consltLista}}
                            <option value="{{id_conslt}}">{{alias_conslt}}</option>
                        {{/each}}
                        </select>
                    {{else}}
                        <label>No se encontró ningún consultorio disponible.</label>
                    {{/if}}
                </div>
            </div>
            <div class="row">
                <div class="six columns">
                    <label>&nbsp;</label>
                    <input class="button-primary u-full-width" type="submit" value="Agregar Doctor">
                </div>
            </div>
        </form>
    </div>
</div>